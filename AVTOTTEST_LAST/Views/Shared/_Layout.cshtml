<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AVTOTTEST_LAST</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AVTOTTEST_LAST.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"> <img class="w-25" src="~/images/Без названия.png"/></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-warning h4" asp-area="" asp-controller="Exam" asp-action="Index">Biletlar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-success h4" asp-controller="Exam" asp-action="Index">Imtihon</a>
                        </li>
                       
                    </ul>
                    <a class="nav-link text-dark" data-bs-toggle="modal" data-bs-target="#exampleModal" asp-area="" asp-controller="Home" asp-action="Privacy"><img class="w-50" src="~/images/prfile.png" />
                        <h6>Kirish</h6>
                    </a>

                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="exampleModalLabel">AVTOTEST 2022</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    @ViewBag.user Lorem ipsum dolor, sit amet consectetur adipisicing elit. Exercitationem vero incidunt iste labore veritatis, ipsa reiciendis tempore consectetur 
                                </div>
                                <div  class="modal-footer justify-content-center">
                                    <a asp-controller="Login" asp-action="SignIn" class="btn btn-primary">Tizimga kirish</a>
                                    <a asp-controller="Login" asp-action="SignUp" class="btn btn-primary">Ro'yhatdan o'tish</a>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - AVTOTTEST_LAST - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
